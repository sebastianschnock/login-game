<header class='main-header bg-info text-center'>
	<h1>Login game</h1>
</header>

{{#if session.isAuthenticated}}
	<div class='text-right'>
		Logged in as <em>{{session.user}}</em>
		<a href='#' {{action 'logout'}}>(log out)</a>
	</div>

	{{#if session.showCongratulations}}
		<div class='congratulations-hint alert alert-success'>
			{{congratulationsText}}
			<button class='close' {{action 'hideCongratulations'}}>
				<span aria-hidden='true'>&times;</span>
			</button>
		</div>
	{{/if}}
{{else}}
	Please {{#link-to 'login'}}log in{{/link-to}} or {{#link-to 'login'}}sign up{{/link-to}}
{{/if}}

{{outlet}}
